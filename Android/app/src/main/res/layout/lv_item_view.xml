<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/tv_border"
    >


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_meals_tip"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="tip"
        android:fontFamily="@font/armata"
        android:textStyle="bold"
        android:textSize="14dp"

        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/tv_meals_nume"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_meals_tip"
        android:hint="nume"
        android:fontFamily="@font/armata"
        android:textStyle="bold"
        android:textSize="14dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/tv_meals_calorii"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_meals_nume"
        android:hint="calorii"
        android:fontFamily="@font/armata"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="14dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/tv_meals_aport"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_meals_calorii"
        android:hint="aport energetic"
        android:fontFamily="@font/armata"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="14dp" />

</androidx.constraintlayout.widget.ConstraintLayout>