<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FeedbackFragment"
    android:background="@color/whiteMain"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="30dp"
        android:background="@color/whiteMain"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/armata"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="@string/myplan"
        android:id="@+id/tv_plans"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        />

    <ListView
        android:id="@+id/lv_activ"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="30dp"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/addProgram"
            android:textColor="@color/whiteMain"
            android:background="@drawable/circlebutton"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:id="@+id/program_add_item"
            />

   </LinearLayout>
</FrameLayout>
